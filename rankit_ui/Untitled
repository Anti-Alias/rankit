function MyComponent() { const [state, setState] = useState('NOT_LOADING');
  const [page, setPage] = useState({ data: [], cursor: null });
  const loadFirstPage = () => {
    if(state === 'LOADING') { return };
    setState('LOADING');
    try {
      const firstPage = fetchData() ;
      setPage(firstPage);
      setState('NOT_LOADING');
    }
    catch {
      setState('ERROR');
    }
  };
}
